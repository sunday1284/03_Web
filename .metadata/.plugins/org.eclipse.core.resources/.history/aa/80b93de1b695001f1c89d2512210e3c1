<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
	<fieldset>
		<legend>성별</legend>
		<input type="radio" name="gender" value="male">남
		<input type="radio" name="gender" value="female" checked>여
		<input type="button" value="선택" onclick="chkRdo()">
	</fieldset>
	<fieldset>
		<legend>취미</legend>
		html<input type = "checkbox" value="HTML">
		css<input type = "checkbox" value="CSS">
		js<input type = "checkbox" value="JAVASCRIPT" checked>
		java<input type = "checkbox" value="JAVA">
		서버<input type = "checkbox" value="SERVER">
		<button onclick="chkbox()">선택</button>
	</fieldset>
	
	<script>
	function chkbox(){
		
		//체크된 항목을 최종 출력하자
		console.log(document.getElementsByTagName('input'));	//5
		
		
	}
	
	function chkRdo(){
		//선택된 성별 정보를 alert 혹은 console의 log로 출력해보기
		/* var inputs = document.getElementsByTagName('input'); //3 */
		var gds = document.getElementsByName('gender'); //2
		
		console.log(gds);
		console.log(gds[1].checked);
		
		//반복문
		for(var i = 0; i<gds.length;i++){
			console.log("반복문>> " +gds[i].checked);
			//조건문
			if(gds[i].checked){
				//true인 항목만 최종 출력
				alert("나의 성별은 " +gds[i].value);
			}
		}
		
	}
	</script>
</body>
</html>